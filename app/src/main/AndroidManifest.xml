<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.mpei.vkr.magmaencryption"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".MagmaApplication"
        android:allowBackup="true"
        android:icon="@drawable/main_icon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/main_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MagmaEncryption">
        <activity
            android:name=".presentation.views.SplashActivity"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".presentation.views.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>